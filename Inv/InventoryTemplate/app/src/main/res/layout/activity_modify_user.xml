<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyUserActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/modify_user_layout">

            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textOff="Add Permissions"
                android:textOn="Remove Permissions"
                android:id="@+id/ModifyUserToggleButton"></ToggleButton>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ModifyUserUserName"
                android:gravity="center_horizontal"
                android:hint="Username"></EditText>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ModifyUserTableName"
                android:hint="Table Name"
                android:gravity="center_horizontal"></EditText>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ModifyUserPermission"
                android:gravity="center_horizontal"
                android:hint="Permission"></EditText>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ModifyUserModify"
                android:text="Modify"></Button>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ModifyUserListView"></ListView>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ModifyUserPermissionListView"></ListView>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>